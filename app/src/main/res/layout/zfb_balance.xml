<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:background="@color/colorLight_blue"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageButton
            android:padding="10dp"
            android:background="@color/colorTransparent"
            android:src="@drawable/ic_qqhb_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/img_break"/>
        <TextView
            android:id="@+id/tv_title"
            android:textColor="@color/colorWhiter"
            android:textSize="18sp"
            android:text="@string/add_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_break"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adContainer">
    </RelativeLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL_time"
        android:clickable="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn_pressed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:maxLength="8"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:id="@+id/change_the_amount"
            android:textSize="15sp"
            android:hint="余额金钱（元）"
            android:background="@drawable/btn_pressed"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_weight="17.39"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1">
        <Button
            android:id="@+id/make_preview"
            android:enabled="false"
            android:layout_margin="20dp"
            android:background="@drawable/button"
            android:textColor="@color/colorBack_Gray"
            android:textSize="18sp"
            android:text="@string/make_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
