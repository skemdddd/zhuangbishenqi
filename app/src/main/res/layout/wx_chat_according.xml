<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
           >
    <RelativeLayout
        android:background="#383a3f"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/relativeLayout">
        <View
            android:paddingLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#2e2e31"
            android:id="@+id/view"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/image_back"/>
        <ImageButton
            android:padding="18dp"
            android:background="@color/colorTransparent"
            android:src="@drawable/red_alipay_red_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/image_back"/>
        <TextView
            android:id="@+id/tv_title"
            android:textColor="@color/colorWhiter"
            android:textSize="16sp"
            android:layout_marginStart="6dp"
            android:text="@string/avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/view"/>
        <ImageView
            android:layout_marginRight="6dp"
            android:src="@drawable/actionbar_particular_icon"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageView5"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:background="#EBEBEB"
        android:id="@+id/recyclerView_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_above="@+id/relativeLayout2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e6df"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignParentStart="true"/>

    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/colorWhiter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_toStartOf="@+id/linearLayout2">
          <ImageView
              android:layout_gravity="center"
              android:src="@drawable/wechat_chat_voice"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="12dp"
              android:id="@+id/imageView6"
              android:layout_centerVertical="true"
              android:layout_alignParentStart="true"/>

          <View
              android:layout_width="wrap_content"
              android:layout_height="1dp"
              android:background="#dfdfdf"
              android:layout_alignBottom="@+id/imageView6"
              android:layout_alignParentEnd="true"
              android:layout_toEndOf="@+id/imageView6"/>
      </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout2">
            <ImageView
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:src="@drawable/wechat_chat_expression"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"/>
            <ImageView
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:src="@drawable/wechat_chat_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>




        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
