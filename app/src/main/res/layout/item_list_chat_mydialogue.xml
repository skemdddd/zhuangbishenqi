<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorWhiter"
            tools:visibility="visible"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/item_time"
            android:textSize="12sp"
            android:visibility="gone"
            android:gravity="center"
            android:id="@id/tv_time"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="@string/add_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />

    <RelativeLayout
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_marginEnd="10dp"
                android:id="@+id/imag_red"
                android:src="@drawable/redpoint"
                tools:visibility="visible"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginEnd="10dp"
                tools:visibility="visible"
                android:visibility="gone"
                android:layout_gravity="center"
                tools:text="@string/add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_timewvoice"
                />
            <TextView

                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="4dp"
                android:maxEms="13"
                android:id="@+id/tv_myspeak"
                android:background="@drawable/agq"
                tools:text="@string/add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:layout_gravity="top"
                android:layout_marginEnd="6dp"
                tools:src="@drawable/img_10023"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/img_myheard"/>

        </LinearLayout>



    </RelativeLayout>


</LinearLayout>
