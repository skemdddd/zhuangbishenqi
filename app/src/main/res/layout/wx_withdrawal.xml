<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/colorLight_blue"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageButton
                android:padding="10dp"
                android:background="@color/colorTransparent"
                android:src="@drawable/ic_qqhb_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:id="@+id/img_break"/>

            <TextView
                android:id="@+id/tv_title"
                android:textColor="@color/colorWhiter"
                android:textSize="18sp"
                android:text="微信提现"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img_break"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/RL_changebank"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_pressed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:text="选择银行卡"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/banck"
                android:text="中国工商银行"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"/>
            <ImageView
                android:layout_marginEnd="10dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:layout_margin="10dp"
            android:background="@drawable/btn_pressed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/cadId"
                android:maxLength="4"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textSize="15sp"
                android:hint="银行卡尾号（后四位）"
                android:background="@drawable/btn_pressed"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_time"
            android:clickable="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_pressed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:maxLength="8"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:id="@+id/change_the_amount"
                android:textSize="15sp"
                android:hint="提现金额"
                android:background="@drawable/btn_pressed"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/LL_pictures"
            android:background="@drawable/btn_pressed"
            android:layout_weight="2.5"
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="0dp">

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:id="@+id/edi_content"
                android:layout_margin="10dp"
                android:text="提交手续费"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <com.example.administrator.zhuangbishenqi.widget.SwitchView
                android:id="@+id/view_switch"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_weight="17.39"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1">

            <Button
                android:id="@+id/make_preview"
                android:enabled="false"
                android:layout_margin="20dp"
                android:background="@drawable/button"
                android:textColor="@color/colorBack_Gray"
                android:textSize="18sp"
                android:text="@string/make_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
