<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageButton
    android:background="@color/colorTransparent"
    android:layout_margin="20dp"
    android:src="@drawable/ic_dialog_text_50dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:id="@+id/ibtn_text"/>

    <ImageButton
        android:background="@color/colorTransparent"
        android:layout_margin="20dp"
        android:src="@drawable/ic_dialog_picture_50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_picture"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:background="@color/colorTransparent"
        android:layout_margin="20dp"
        android:src="@drawable/ic_dialog_voice_50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_voic"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>
    

    <ImageButton
        android:background="@color/colorTransparent"
    android:src="@drawable/ic_dialog_hongbao_50dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ibtn_hongbao"
    android:paddingBottom="20dp"
    android:layout_below="@+id/ibtn_text"
    android:layout_alignStart="@+id/ibtn_text"/>
    <ImageButton
        android:background="@color/colorTransparent"
        android:src="@drawable/ic_dialog_transfer_50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_transfer"
        android:paddingBottom="20dp"
        android:layout_alignTop="@+id/ibtn_hongbao"
        android:layout_alignStart="@+id/ibtn_picture"/>

