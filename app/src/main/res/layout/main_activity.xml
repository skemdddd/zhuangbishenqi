<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:background="@color/colorLight_blue"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/linearLayout">

        <TextView
            android:textSize="22sp"
            android:textColor="@color/colorWhiter"
            android:text="神器"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_marginStart="40dp"
                android:id="@+id/btn_artifact_wechat_dialogue"
                android:background="@color/colorTransparent"
                android:src="@drawable/btn_artifact_wechat_dialogue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:id="@+id/btn_artifact_transfer_accounts"
                android:background="@color/colorTransparent"
                android:src="@drawable/btn_artifact_transfer_accounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:id="@+id/btn_artifact_star"
                android:src="@drawable/btn_artifact_star"
                android:background="@color/colorTransparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_marginEnd="40dp"
                android:id="@+id/btn_artifact_red"
                android:background="@color/colorTransparent"
                android:src="@drawable/btn_artifact_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:layout_marginEnd="40dp"
                android:layout_marginTop="30dp"
                android:id="@+id/btn_artifact_kuso"
                android:src="@drawable/btn_artifact_kuso"
                android:background="@color/colorTransparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:layout_marginEnd="40dp"
                android:layout_marginTop="30dp"
                android:id="@+id/btn_delete"
                android:src="@drawable/btn_artifact_flaunt_wealth"
                android:background="@color/colorTransparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
