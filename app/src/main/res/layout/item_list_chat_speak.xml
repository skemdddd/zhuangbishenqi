<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
         card_view:cardBackgroundColor="@color/colorWhiter"
         card_view:cardCornerRadius="10dp"
         card_view:cardPreventCornerOverlap="true"
         card_view:cardUseCompatPadding="true"
         card_view:contentPadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                tools:src="@drawable/img_10010"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_item_head"/>
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/tv_dialogue"
                android:maxLines="1"
                android:maxLength="60"
                tools:text="@string/randomheard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img_item_head"
                />
         <LinearLayout

             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_alignParentEnd="true">
             <Button
                 android:layout_gravity="center"
                 android:textColor="@color/colorWhiter"
                 android:text="@string/delete"
                 android:background="@drawable/button"
                 android:layout_width="50dp"
                 android:layout_height="25dp"
                 android:id="@+id/btn_delete"/>

         </LinearLayout>


        </RelativeLayout>

</android.support.v7.widget.CardView>



