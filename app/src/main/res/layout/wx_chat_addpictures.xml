<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:background="@color/colorLight_blue"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageButton
            android:padding="10dp"
            android:background="@color/colorTransparent"
            android:src="@drawable/ic_qqhb_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/img_break"/>
        <TextView
            android:id="@+id/tv_title"
            android:textColor="@color/colorWhiter"
            android:textSize="18sp"
            android:text="@string/add_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_break"/>
        <Button
            android:id="@+id/btn_ture"
            android:text="@string/confirm"
            android:textColor="@color/colorWhiter"
            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/button"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginEnd="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rbtn_my"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rbtn_style"
                android:button="@null"
                android:checked="true"
                android:singleLine="true"
                android:text="自己发送"
                android:textColor="#2991a5"
                style="@style/Widget.AppCompat.Button"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbtn_other"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rbtn_style"
                android:button="@null"
                android:singleLine="true"
                android:text="对方发送"
                android:textColor="#2991a5"
                style="@style/Widget.AppCompat.Button"
                android:textSize="18sp" />


        </RadioGroup>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL_time"
        android:clickable="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn_pressed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time"
            android:textSize="18sp"
            android:hint="@string/messages_time"
            android:layout_margin="10dp"
            android:background="@drawable/btn_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/LL_pictures"
        android:background="@drawable/btn_pressed"
        android:layout_margin="10dp"
        android:layout_weight="2.90"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="0dp">
        <TextView
            android:gravity="left|center"
            android:id="@+id/edi_content"
            android:layout_margin="10dp"
            android:hint="选择图片"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView

            android:id="@+id/imag_pictures"
            android:gravity="center"
            tools:src="@drawable/img_10000"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="16.10"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>

</LinearLayout>
